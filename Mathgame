    <title>Juego de Matemáticas</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #eef;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .game-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            width: 300px;
        }
        .question {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .answers {
            display: flex;
            justify-content: center;
            gap: 10px;
            flex-wrap: wrap;
        }
        .answer-box {
            background-color: #87CEEB;
            padding: 15px;
            border-radius: 5px;
            cursor: pointer;
            width: 60px;
            text-align: center;
            font-size: 18px;
            transition: 0.3s;
        }
        .answer-box:hover {
            background-color: #4682B4;
            color: white;
        }
        .timer {
            font-size: 20px;
            margin-bottom: 20px;
            color: red;
        }
        .score {
            font-size: 18px;
            margin-bottom: 10px;
        }
    </style>
